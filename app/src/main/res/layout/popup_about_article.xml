<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/linear_layout"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ACCCAC"
        android:padding="20dp"
        android:layout_width="match_parent">

    <TextView
            android:id="@+id/aboutUserTitleTextVew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Userについて"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/userImageView"
            android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/followeesCountTextView"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/followersCountTextView"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/idTextView"/>
    <Button
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close Me"
    />

</LinearLayout>